 <h1>index</h1>

<div class="btn btn-light">
<%= link_to "Add new artiste", new_artiste_path %>
</div>

<div>
  <ul>
    <% @artistes.each do |artiste| %>
    <div>
      <li><strong><%= artiste.name %></strong></li>
      <li><%= artiste.genre %></li>
      <li><%= artiste.biography %></li>
      <%= link_to "Allez voir: #{artiste.name}", artiste_path(artiste),class: 'btn btn-primary' %>
      <%= link_to "delete", artiste_path(artiste), method: :delete, class: 'btn btn-primary' %>
    </div>
    <% end %>
  </ul>
</div>
