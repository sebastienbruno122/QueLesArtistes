<h1 CLASS="main-header-6">Discutons !</h1>

<%= form_for :contact , :html => {:class => "form-horizontal mb-5", :role => "form"}, url: home_index_path, remote: true do |f| %>
    <div class="col-md-6">
        <%= f.label :name %></br>
          <%= f.text_field  :name, required: true, class: "contact-form-text-area", placeholder: "TON NOM OU PSEUDONYME" %></br>

        <%= f.label :email %></br>
        <%= f.text_field :email, required: true, class: "contact-form-text-area", placeholder: "TON EMAIL" %></br>

      <%= f.label :message %></br>
      <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                        placeholder: "DIS NOUS EN PLUS!"%></br>

      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>

      <%= f.submit 'Envoyer', class: 'btn btn-light' %>
    </div>
  <% end %>
  <div class="col-md-6" id="flash-message">
    <%= render 'home/flash' %>
  </div>
