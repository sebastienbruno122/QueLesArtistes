<h1> show</h1>
<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <div>
        <h2><%= @artiste.name %></h2>
        <p><%= @artiste.genre %></p>
        <p><%= @artiste.biography %></p>
        <% if @artiste.photo.attached? %>
        <%= cl_image_tag @artiste.photo.key, height: 600, width: 400, crop: :fill %>
        <% end %>
        <% if user_signed_in? %>
         <%= link_to "edit", edit_artiste_path , class: 'btn btn-primary'%>
         <% end %>
        <h5> Citation(nouveaut√©s)</h5>
        <ul>
          <% @artiste.nouveautes.each do |nouveaute| %>
            <li class="list-group-item"><%= nouveaute.citation %></li>
          <% end %>
          <% if user_signed_in? %>
          <%= link_to "create citation", new_artiste_nouveaute_path(@artiste), class: 'btn btn-primary' %>
        <div>
            <%= render "nouveautes/list", nouveautes: @artiste.nouveautes %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>

<div>
